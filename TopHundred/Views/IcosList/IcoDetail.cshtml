@model IcoItem
@{
    ViewBag.Title = "Ico Detail";
}


<div class="row" style="margin-top: 100px">
    <div class="col col-6 col-md-2">
        <img src="~/img/mario.jpg" class="img-fluid card" alt="" /><br />
    </div>
    <div class="col col-md-9"><h2 style="color: #2f4f4f;">@Model.Name (@Model.Symbol)</h2></div>
</div>
<div class="row" style="margin-top: 40px;">
    <div class="col col-12 col-md-8">

        <ul class="list-group list-group-flush" >
            <li class="list-group-item"></li>
            <li class="list-group-item">
                <div class="row">
                    <div class="col col-sm-6" style="padding-left: 0;">Status</div>
                    <div class="col col-sm-6" style="font-weight: bold;">@Model.Status</div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row">
                    <div class="col col-sm-6" style="padding-left: 0;">Start Time</div>
                    <div class="col col-sm-6" style="font-weight: bold;">@Model.StartTime</div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row">
                    <div class="col col-sm-6" style="padding-left: 0;">End Time</div>
                    <div class="col col-sm-6" style="font-weight: bold;">@Model.EndTime</div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row">
                    <div class="col col-sm-6" style="padding-left: 0;">Token Count</div>
                    <div class="col col-sm-6" style="font-weight: bold;">@Model.TotalTokenCount.ToString("##,###") @Model.Symbol</div>
        </div>
        </li>
        <li class="list-group-item">
            <div class="row">
                <div class="col col-sm-6" style="padding-left: 0;">Links</div>
                <div class="col col-sm-6" style="font-weight: bold;">to be filled</div>
            </div>
        </li>
        <li class="list-group-item">
            <div class="row">
                <div class="col col-sm-6" style="padding-left: 0;">Whitepaper</div>
                <div class="col col-sm-6" style="font-weight: bold;">@Model.WhitePaper</div>
            </div>
        </li>
        <li class="list-group-item">
            <div class="row">
                <div class="col col-sm-6" style="padding-left: 0;">Description</div>
                <div class="col col-sm-6" style="font-weight: bold;">@Model.Description</div>
            </div>
        </li>
        <li class="list-group-item"></li>
        </ul>
    </div>
</div>
<div class="row" style="margin-top: 100px;">
    detailed content
</div>
