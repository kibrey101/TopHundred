@model IEnumerable<IcoItem>
@{
    ViewBag.Title = "Ico Index";
}

    <form class="form-row" style="margin: 10px 0 15px 0;">
        <div class="offset-md-6 col-md-6">
            <div class="input-group">

                <input type="search" class="form-control" placeholder="Search...">
                <button class="input-group-append" type="submit"><i class="fa fa-search"></i></button>
            </div>
        </div>
    </form>

<div class="card-panel" style="margin: 10px 0 25px 0;">
    <h2>TOP ICOS</h2>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Token Count</th>
            <th>Status</th>
            <th class="text-center"><i class="fa fa-clock-o" style="color: green; font-size: 20px;"></i></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.ListPosition.PositionValue</td>
            <td>
                <a asp-action="IcoDetail" asp-controller="IcosList" asp-route-id="@item.Id" target="_blank">
                    @item.Name (@item.Symbol)
                </a>
            </td>
            <td>@item.TotalTokenCount.ToString("##,###") @item.Symbol</td>
            <td>@item.Status</td>
            <td class="text-center">@item.StartTime.ToString("dd.MM.yyyy") - @item.EndTime.ToString("dd.MM.yyyy")</td>
        </tr>
    }

</table>

