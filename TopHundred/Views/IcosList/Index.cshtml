@model IEnumerable<IcoItem>
@{
    ViewBag.Title = "Ico Index";
}

<form class="form-row col-11 col-md-12" style="margin: 15px 0; padding-top: 10px;">
    <div class="offset-md-7 col-md-5 col-8 offset-2">
        <div class="input-group">
            <input type="search" class="form-control" placeholder="Search...">
            <button class="input-group-append btn btn-success" type="submit"><i class="fa fa-search"></i></button>
        </div>
    </div>
</form>

<div class="card-panel" style="margin: 75px 0;">
    <h2 class="text-center text-md-left">TOP TRENDING ICOS</h2>
</div>
<div class="table-responsive">
    <table class="table table-hover" >
        <thead>
            <tr style="font-size: 1.1em;">
                <th>#</th>
                <th>Description</th>
                <th>Status</th>
                <th>Price</th>
                <th>Start</th>
                <th>End</th>
                <th class="text-center">Count</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
        <tr>
            <td>

                <a asp-action="IcoDetail" asp-controller="IcosList" asp-route-id="@item.Id" style="color: #000;text-decoration: none;">
                    <img src="~/img/3d.png" class="img-thumbnail responsive-img" style="height: 35px;" /><br />
                    @item.Name (@item.Symbol)
                </a>
            </td>
            <td>@item.Description</td>

            <td style="color: #000080;">@item.Status</td>
            <td>@item.Price @item.PriceCurrency</td>
            <td>@item.StartTime.ToString("MMM dd, yyyy")</td>
            <td >@item.EndTime.ToString("MMM dd, yyyy")</td>
            <td class="text-center">@item.TotalTokenCount.ToString("##,###") @item.Symbol</td>
        </tr>
        }
        <tr>
            <td></td><td></td><td></td><td></td><td></td><td></td>
        </tr>
    </table>
</div>


