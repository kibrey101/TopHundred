@model IEnumerable<IcoItem>
@{
    ViewBag.Title = "Ico Index";
}

<form class="form-row sticky-top" style="margin: 10px 0 15px 0; padding-top: 10px;">
    <div class="offset-md-7 col-8 offset-2 col-md-5">
        <div class="input-group">

            <input type="search" class="form-control" placeholder="Search...">
            <button class="input-group-append" type="submit"><i class="fa fa-search"></i></button>
        </div>
    </div>
</form>

<div class="card-panel" style="margin: 35px 0 20px 0;">
    <h2>TOP ICOS</h2>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover table-responsive-sm table-bordered" >
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Token Count</th>
                <th>Status</th>
                <th>Start</th>
                <th class="text-center">End</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
        <tr>
            <td> @item.ListPosition.PositionValue</td>
            <td>
                <a asp-action="IcoDetail" asp-controller="IcosList" asp-route-id="@item.Id" target="_blank" style="color: #000; font-weight: bold;">
                    @item.Name (@item.Symbol)
                </a>
            </td>
            <td>@item.TotalTokenCount.ToString("##,###") @item.Symbol</td>
            <td style="color: #000080;">@item.Status</td>
            <td>@item.StartTime.ToString("dd.MM.yyyy")</td>
            <td class="text-center">@item.EndTime.ToString("dd.MM.yyyy")</td>
        </tr>
        }

    </table>
</div>


