<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/materialize/dist/css/materialize.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav>
        <div class="nav-wrapper container">
            <a asp-controller="app" asp-action="index" class="brand-logo"><i class="fa fa-coffee"></i></a>
            <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="fa fa-bars"></i></a>
            <ul class=" hide-on-med-and-down" style="margin-left: 100px;">
                <li><a asp-controller="app" asp-action="index">Home</a></li>
                <li><a asp-controller="app" asp-action="Upcoming">Upcoming</a></li>
                <li><a asp-controller="App" asp-action="Contact">Contact Us</a></li>
                <li><a asp-controller="App" asp-action="About">About Us</a></li>
                <li class="right-align"><a asp-controller="Account" asp-action="Login">Login</a></li>
            </ul>
            <ul class="side-nav" id="mobile-demo">
                <li><a asp-controller="app" asp-action="Index">Home</a></li>
                <li><a asp-controller="app" asp-action="upcoming">Upcoming</a></li>
                <li><a asp-controller="App" asp-action="Contact">Contact Us</a></li>
                <li><a asp-controller="App" asp-action="About">About Us</a></li>
            </ul>
        </div>
    </nav>
    <main class="container">
        @RenderBody()
    </main>
    <footer class="page-footer">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">Footer Content</h5>
                    <p class="grey-text text-lighten-4">You can use rows and columns here to organize your footer content.</p>
                </div>
                <div class="col l4 offset-l2 s12">
                    <h5 class="white-text">Links</h5>
                    <ul>
                        <li><a class="grey-text text-lighten-3" href="#!">Link 1</a></li>
                        
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                © 2014 Copyright Text
                <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jQuery/dist/jquery.min.js"></script>
    <script src="~/lib/materialize/dist/js/materialize.min.js"></script>
    <script src="~/js/mainApp.js"></script>
</body>
</html>
