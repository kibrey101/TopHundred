@model Customer
@{
    ViewData["Title"] = "UserAccount";
}

<div class="card-panel" style="margin-top: 50px;">
    <h2>Account details</h2>
</div>
<div class="card-panel" style="margin: 75px 0;">
    <h3 class="text-center text-md-left">My ICOS</h3>
</div>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr style="font-size: 1.1em;">
                <th></th>
                <th>Name</th>
                <th>Start</th>
                <th>End</th>
                <th>Status</th>
                <th class="text-center">Count</th>
            </tr>
        </thead>
        @foreach (var item in Model.IcoItems)
        {
            <tr>
                <td><a asp-controller="IcosList" asp-action="Edit" asp-route-id="@item.Id" class="nav-link"><i class="fa fa-edit"></i></a></td>
                <td>
                    <div class="row">
                        <a asp-action="IcoDetail" asp-controller="IcosList" asp-route-id="@item.Id" style="color: #000; text-decoration: none;">
                            <img src="~/img/mario.jpg" class="card-img-top responsive-img" style="width: 80px;" alt=""/>
                            <p class="card-text">@item.Name (@item.Symbol)</p>
                        </a>
                    </div>
                </td>

                <td>@item.StartTime.ToString("MMM dd, yyyy")</td>
                <td>@item.EndTime.ToString("MMM dd, yyyy")</td>
                <td style="color: #000080;">@item.Status</td>
                <td class="text-center">@item.TotalTokenCount.ToString("##,###") @item.Symbol</td>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </table>
</div>

